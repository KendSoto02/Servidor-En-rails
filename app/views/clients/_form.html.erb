<%= form_for @cliente, { remote: true, multiple: true }  do |f| %>

    <div class="form-group">
      <h4 class="control-label">Datos del cliente:</h4>
    </div>

    <div class="item form-group<%= @cliente.errors[:name].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :name, "Nombre del cliente: " %>
      <div class="input-group">
        <%= f.text_field :name, {:class=> "form-control", :placeholder=>"Introduzca el nombre del cliente..."} %>        
        <%if @cliente.errors[:name].any? %>
          <p class="bg-danger"><%= @cliente.errors[:name].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @cliente.errors[:direction].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :direction, "Dirección del cliente: " %>
      <div class="input-group">
        <%= f.text_area :direction, {class: "form-control", :placeholder=>"Introduzca la dirección del cliente..."} %>
        <%if @cliente.errors[:direction].any? %>
          <p class="bg-danger"><%= @cliente.errors[:direction].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @cliente.errors[:email].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :email, "Email del cliente: " %>
      <div class="input-group">
        <%= f.text_field :email, {:class=> "form-control", :placeholder=>"Introduzca el email del cliente.."} %>        
        <%if @cliente.errors[:email].any? %>
          <p class="bg-danger"><%= @cliente.errors[:email].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @cliente.errors[:statusClient].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :statusClient, "Estado cuenta: " %>
      <div class="input-group">
        <%= f.select(:statusClient, options_for_select(statusClients, @cliente.statusClient), {prompt: "Seleccione"}, class: 'form-control' )%>        
        <%if @cliente.errors[:statusClient].any? %>
          <p class="bg-danger"><%= @cliente.errors[:statusClient].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @cliente.errors[:rolUser].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :rolUser, "Tipo de cuenta: " %>
      <div class="input-group">
        <%= f.select(:rolUser, options_for_select(rolUsers, @cliente.rolUser), {prompt: "Seleccione"}, class: 'form-control' )%>
        <%if @cliente.errors[:statusClient].any? %>
          <p class="bg-danger"><%= @cliente.errors[:rolUser].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>
    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @cliente.new_record? ? "Crear Cliente" : "Actualizar Cliente", :class => "btn btn-success"%>
    </div>  
  <% end %>