<h1 class="h3 mb-2 text-gray-800">Platos</h1>
<div>  
  <%= link_to new_dish_path, { remote: true, class: "btn btn-info" }  do %>
    <span class="fas fa-plus-square" ></span>
  <% end %>
</div>
<br />
<div class="card shadow mb-4">
<div class="card-body">
    <div class="table-responsive">
    <table class="table table-bordered" id="tablaDishes" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Foto</th>
            <th>Nombre plato</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
            <% @dishes.each do |dis| %>
            <tr id="dish_<%= dis.id %>" >
                <td><%= image_tag(dis.picture.url, size: "50x50", class: "rounded-circle") if dis.picture? %></td>
                <td><%= dis.name %></td>
                <td><%= dis.description %></td>
                <td>$<%= dis.price %></td>
                <td>
                <%= link_to "editar", edit_dish_path(dis), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                <%= link_to "Borrar", dis, remote: true, method: :delete, data: { confirm: "¿Borrar plato: #{dis.name}?"}, class: "btn btn-danger btn-xs" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>
<%= render 'modal_dishes' %>