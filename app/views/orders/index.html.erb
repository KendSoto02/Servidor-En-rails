<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Pedidos</h1>
<!-- DataTales Example -->
<div>  
  <%= link_to new_order_path, {remote: true, class: "btn btn-info", id: "anadir-order-btn"}  do %>
    <span class="fas fa-plus-square" style=""></span>
  <% end %>
</div>
<br />
<div class="card shadow mb-4">
<div class="card-body">
    <div class="table-responsive">
    <table class="table table-bordered" id="tablaOrders" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Plato</th>
            <th>Cantidad</th>
            <th>Estado orden</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
            <% @orders.each do |ord| %>
            <tr id="order_<%= ord.id %>" >
                <td><%= ord.date %></td>
                <td><%= ord.client.name %></td>
                <td><%= ord.dish.name %></td>
                <td><%= ord.quantity %></td>
                <td><%= ord.statusOrder %></td>
                <td>
                <%= link_to "editar", edit_order_path(ord), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                <%= link_to "Borrar", ord, remote: true, method: :delete, data: { confirm: "Â¿Borrar orden de cliente: #{ord.client.name}?"}, class: "btn btn-danger btn-xs" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>
<%= render 'modal_orders' %>
