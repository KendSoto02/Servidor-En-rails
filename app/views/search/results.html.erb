<div class="card shadow mb-4">
<div class="card-body">
    <div class="table-responsive">
    <table class="table table-bordered" id="tablaOrders" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Plato</th>
            <th>Cantidad</th>
            <th>Estado orden</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
            <% @orders.each do |ord| %>
            <tr id="order_<%= ord.id %>" >
                <td><%= ord.date %></td>
                <td><%= ord.client.name %></td>
                <td><%= ord.dish.name %></td>
                <td><%= ord.quantity %></td>
                <td><%= t("activerecord.attributes.order.statusOrders.#{ord.statusOrder}") %></td>
                <td>
                <%= link_to "Volver", orders_path(ord), html_options = {class: "btn btn-info btn-xs"} %>
                &nbsp;
                <%= link_to "editar", edit_order_path(ord), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                &nbsp;
                <%= link_to "Borrar", ord, remote: true, method: :delete, data: { confirm: "Â¿Borrar orden de cliente: #{ord.client.name}?"}, class: "btn btn-danger btn-xs" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>